---
const { title, description } = Astro.props

const defaultTitle = "Downside"
const defaultDescription = "The Site of dos, a piece of his heart."

//const website = "https://downside"
---

<html lang="en">
	<head>
		<meta charset="utf-8" />
		<link rel="icon" type="image/svg+xml" href="/fevicon.svg" />
		<meta name="viewport" content="width=device-width initial-scale=1.0"/>
		<meta name="generator" content={Astro.generator} />
		<title>{title ?? defaultTitle}</title>
		<meta name="description" content={description ?? defaultDescription} />

		<!--meta property="og:url" content={website} /-->
		<meta property="og:type" content="website" />
		<meta property="og:title" content={defaultTitle} />
		<meta property="og:description" content={defaultDescription} />
		<meta property="og:image" content="/social-image.jpg" />

		<link rel="preconnect" href="https://fonts.googleapis.com">
		<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
		<link href="https://fonts.googleapis.com/css2?family=Faculty+Glyphic&family=Libre+Franklin:ital,wght@0,100..900;1,100..900&family=Montserrat:ital,wght@0,100..900;1,100..900&display=swap" rel="stylesheet">
	</head>
	<body>
		<slot />
	</body>
    <style>
        body {
			font-family: "Faculty Glyphic", sans-serif;
  			font-weight: 100;
  			font-style: normal;
			background-color: #161616;
			color: #fff8f2;
        }
    </style>
</html>